# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGO_URI=mongodb://localhost:27017/edubot

# Translation Service Configuration
# Google Translate API (using @vitalets/google-translate-api)
# No API key required - perfect for hackathons!
# Note: This uses unofficial Google Translate API

# Security
JWT_SECRET=your-super-secret-jwt-key-here
SESSION_SECRET=your-session-secret-here

# API Keys (if using external services)
# OPENAI_API_KEY=your-openai-api-key
# GOOGLE_TRANSLATE_API_KEY=your-google-translate-key

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-for-verification

# WhatsApp Business API (if using)
# WHATSAPP_TOKEN=your-whatsapp-business-token
# WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# Telegram Bot (if using)
# TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Slack App (if using)
# SLACK_BOT_TOKEN=your-slack-bot-token
# SLACK_SIGNING_SECRET=your-slack-signing-secret

# Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Logging
LOG_LEVEL=info
LOG_FILE=logs/edubot.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Analytics
ANALYTICS_RETENTION_DAYS=90